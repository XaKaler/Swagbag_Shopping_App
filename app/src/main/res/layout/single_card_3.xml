<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/dimen_5"
    android:layout_height="wrap_content"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/card_3_width"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/card_3_background_rectangle_width"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/rec_deep_space_sparkle_5" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10"
            android:background="@color/day_white_night_Eerie_Black">

            <ImageView
                android:id="@+id/dealCardImg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_1_image_size"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/navigation_header_user_img" />

            <TextView
                android:id="@+id/dealCardTitle"
                style="@style/alice_normal_15_dark_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/dealCardImg"
                app:layout_constraintStart_toStartOf="@+id/dealCardImg"
                app:layout_constraintTop_toBottomOf="@+id/dealCardImg" />

            <TextView
                android:id="@+id/dealCardDetails"
                style="@style/arya_normal_12_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:minLines="1"
                android:paddingHorizontal="5dp"
                android:text="TextView"
                android:layout_marginBottom="@dimen/dimen_5"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/dealCardTitle"
                app:layout_constraintStart_toStartOf="@+id/dealCardTitle"
                app:layout_constraintTop_toBottomOf="@+id/dealCardTitle" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>