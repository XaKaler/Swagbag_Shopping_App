<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/dimen_5">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
    android:padding="@dimen/dimen_10"
        android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15"
        android:background="@drawable/rec_cultured_white_5"
        android:padding="@dimen/dimen_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView187">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/productImg"
            android:layout_width="@dimen/help_center_with_order_image_width"
            android:layout_height="@dimen/help_center_with_order_image_height"
            android:scaleType="center"
            android:src="@mipmap/navigation_header_user_img_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="5dp" />

        <TextView
            android:id="@+id/tvProductCompnayName"
            style="@style/snigiet_normal_14_davys_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:maxLines="1"
            android:minLines="1"
            android:text="Kenster"
            android:textAllCaps="true"
            android:textColor="@color/state_green"
            app:layout_constraintStart_toEndOf="@+id/productImg"
            app:layout_constraintTop_toTopOf="@+id/productImg" />

        <TextView
            android:id="@+id/tvProductName"
            style="@style/snigiet_normal_14_davys_grey"
            android:layout_width="0dp"
            android:maxLines="1"
            android:minLines="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_10"
            android:text="Washing machine white color"
            app:layout_constraintEnd_toStartOf="@+id/imageView31"
            app:layout_constraintStart_toEndOf="@+id/productImg"
            app:layout_constraintTop_toBottomOf="@+id/tvProductCompnayName" />

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_right_arrow" />

        <TextView
            android:id="@+id/textView127"
            style="@style/elmsri_normal_12_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Rs"
            app:layout_constraintStart_toStartOf="@+id/tvProductName"
            app:layout_constraintTop_toBottomOf="@+id/tvProductName" />

        <TextView
            android:id="@+id/productPrice"
            style="@style/elmsri_normal_12_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15999"
            app:layout_constraintBottom_toBottomOf="@+id/textView127"
            app:layout_constraintStart_toEndOf="@+id/textView127"
            app:layout_constraintTop_toTopOf="@+id/textView127" />

        <TextView
            android:id="@+id/cancel"
            style="@style/roboto_medium_12_davys_grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginEnd="@dimen/dimen_5"
            android:background="@drawable/rec_white_5"
            android:paddingVertical="@dimen/dimen_7"
            android:text="@string/cancel"
            android:textAlignment="center"
            android:textAllCaps="true"
            app:layout_constraintEnd_toStartOf="@+id/track"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productImg" />

        <TextView
            android:id="@+id/track"
            style="@style/roboto_medium_12_davys_grey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_5"
            android:layout_marginTop="@dimen/dimen_5"
            android:background="@drawable/rec_white_5"
            android:paddingVertical="@dimen/dimen_7"
            android:text="@string/track"
            android:textAlignment="center"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cancel"
            app:layout_constraintTop_toBottomOf="@+id/productImg" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/deliveryTime2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView186"
        app:srcCompat="@drawable/ic_cube_blue" />

    <TextView
        android:id="@+id/textView186"
        style="@style/roboto_medium_14_davys_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_between_view_and_subview"
        android:text="Order Confirmed"
        android:textColor="@color/Paolo_Veronese_Green"
        app:layout_constraintStart_toEndOf="@+id/imageView60"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView187"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On "
        style="@style/roboto_normal_12_sonic_silver"
        app:layout_constraintStart_toStartOf="@+id/textView186"
        app:layout_constraintTop_toBottomOf="@+id/textView186" />

    <TextView
        android:id="@+id/deliveryTime"
        style="@style/roboto_normal_12_sonic_silver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sat, 27 Nov"
        app:layout_constraintStart_toEndOf="@+id/textView187"
        app:layout_constraintTop_toBottomOf="@+id/textView186" />

    <TextView
        android:id="@+id/deliveryTime2"
        style="@style/roboto_normal_12_sonic_silver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" as per your request."
        app:layout_constraintStart_toEndOf="@+id/deliveryTime"
        app:layout_constraintTop_toBottomOf="@+id/textView186" />

    <ImageView
        android:id="@+id/cancelImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cross_sign" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

