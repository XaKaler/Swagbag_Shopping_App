<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingHorizontal="@dimen/screen_horizontal_padding"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/checkBox"
        style="@style/roboto_normal_14_sonic_silver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/checkbox_selector"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/productCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45"
        style="@style/roboto_normal_14_sonic_silver"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkBox" />

    <View
        android:id="@+id/view17"
        style="@style/line_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <TextView
        android:id="@+id/colorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grey"
        style="@style/roboto_normal_14_sonic_silver"
        android:layout_marginStart="@dimen/dimen_10"
        app:layout_constraintBottom_toBottomOf="@+id/imgColor"
        app:layout_constraintStart_toEndOf="@+id/imgColor"
        app:layout_constraintTop_toTopOf="@+id/imgColor" />

    <ImageView
        android:id="@+id/imgColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox"
        app:layout_constraintStart_toEndOf="@+id/checkBox"
        app:layout_constraintTop_toTopOf="@+id/checkBox"
        app:srcCompat="@drawable/ic_rectangle_grey" />
</androidx.constraintlayout.widget.ConstraintLayout>