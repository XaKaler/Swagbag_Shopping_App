<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/dimen_5"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_15_height"
        android:backgroundTint="@color/day_vempire_black_night_jet"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/hrLineTopLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/horizontal_line_circle" />


            <ImageView
                android:id="@+id/hrMiddleLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/dealCardImg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/dealCardImg"
                app:srcCompat="@drawable/horizontal_line_circle" />


            <ImageView
                android:id="@+id/hrTopRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/dealCardImg"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/horizontal_line_circle" />

            <ImageView
                android:id="@+id/hrBottomRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:srcCompat="@drawable/horizontal_line_circle" />


            <ImageView
                android:id="@+id/hrMiddleRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/dealCardImg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/dealCardImg"
                app:srcCompat="@drawable/horizontal_line_circle" />


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/dealCardImg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_15_image_height"
                android:layout_margin="@dimen/dimen_15"
                android:layout_marginBottom="@dimen/dimen_10"
                android:scaleType="centerCrop"
                android:src="@mipmap/navigation_header_user_img_foreground"
                app:layout_constraintBottom_toTopOf="@+id/dealCardTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_corner_radius="@dimen/dimen_5"
                app:srcCompat="@mipmap/navigation_header_user_img" />

            <TextView
                android:id="@+id/dealCardTitle"
                style="@style/alice_normal_15_dark_green"
                android:layout_width="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:maxLines="1"
                android:minLines="1"
                android:text="TextView"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/dealCardDetails"
                app:layout_constraintEnd_toEndOf="@+id/dealCardDetails"
                app:layout_constraintStart_toStartOf="@+id/dealCardDetails" />

            <TextView
                android:id="@+id/dealCardDetails"
                style="@style/arya_normal_12_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:minLines="1"
                android:text="TextView"
                android:paddingVertical="@dimen/dimen_10"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/dealCardImg"
                app:layout_constraintStart_toStartOf="@+id/dealCardImg" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>