<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".products.ProductsFragment">


    <include
        android:id="@+id/include"
        layout="@layout/toolbar_with_three_menus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dimen_5"
        android:layout_margin="@dimen/dimen_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_5"
            android:background="@drawable/rec_bottom_round"
            android:backgroundTint="@color/day_white_night_chinese_black"
            android:paddingVertical="@dimen/dimen_5">

            <TextView
                style="@style/roboto_normal_14_davys_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_filter_otuline"
                android:drawablePadding="@dimen/dimen_10"
                android:gravity="center"
                android:text="@string/filter"
                android:textAllCaps="true"
                android:textColor="@color/day_davys_grey_night_Taupe_Gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_top"
        android:visibility="gone"
        app:cardElevation="@dimen/dimen_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rec_bottom_round"
            android:backgroundTint="@color/day_white_night_chinese_black"
            android:paddingVertical="@dimen/dimen_5">

            <TextView
                android:id="@+id/tvMen"
                style="@style/roboto_normal_14_davys_grey"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@color/day_davys_grey_night_Taupe_Gray"
                android:text="@string/men"
                android:textAllCaps="true"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/view4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view4"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/sonic_silver"
                android:backgroundTint="@color/sonic_silver"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvSortBy"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvMen"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSortBy"
                style="@style/roboto_normal_14_davys_grey"
                android:textColor="@color/day_davys_grey_night_Taupe_Gray"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:drawablePadding="@dimen/dimen_5"
                android:text="@string/sort_by"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/view5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view4"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view5"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/sonic_silver"
                android:backgroundTint="@color/sonic_silver"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvFilter"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvSortBy"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvFilter"
                style="@style/roboto_normal_14_davys_grey"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:textColor="@color/day_davys_grey_night_Taupe_Gray"
                android:drawablePadding="@dimen/dimen_5"
                android:text="@string/filter"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view5"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView"
        tools:listitem="@layout/single_product" />


</androidx.constraintlayout.widget.ConstraintLayout>