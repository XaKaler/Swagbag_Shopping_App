<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_white_5"
    android:padding="@dimen/screen_horizontal_padding">

    <TextView
        android:id="@+id/textView155"
        style="@style/roboto_medium_16_davys_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply Gift Card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView157"
        style="@style/roboto_medium_13_davys_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:text="Gift card value will be added to your Credit."
        app:layout_constraintStart_toStartOf="@+id/textView155"
        app:layout_constraintTop_toBottomOf="@+id/textView155" />

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView155"
        app:srcCompat="@drawable/ic_cross_sign_without_outline" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout19"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_between_views"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView157">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/cardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="16 Digits Gift Card Number"
            android:inputType="phone" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout20"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout19"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout19"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout19">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/giftCardPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="6 Digits Gift Card Pin" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/addToSwagBagCredit"
        style="@style/roboto_medium_11_silver_foil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30"
        android:background="@drawable/red_rec_outline_5"
        android:paddingVertical="@dimen/dimen_12"
        android:text="ADD TO SAWAGBAG CREDIT"
        android:textAlignment="center"
        android:textColor="@color/red_light"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout20"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout20"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout20" />

</androidx.constraintlayout.widget.ConstraintLayout>