<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rvCategorySliderImg"
        android:layout_width="@dimen/home_category_slider"
        android:layout_height="@dimen/home_category_slider"
        android:src="@mipmap/navigation_header_user_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rvCategoryName"
        style="@style/elmsri_normal_12_black"
        android:fontFamily="@font/roboto_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/rvCategorySliderImg"
        app:layout_constraintStart_toStartOf="@+id/rvCategorySliderImg"
        app:layout_constraintTop_toBottomOf="@+id/rvCategorySliderImg" />

</androidx.constraintlayout.widget.ConstraintLayout>