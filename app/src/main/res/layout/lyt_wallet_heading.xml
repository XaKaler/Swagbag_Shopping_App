<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:weightSum="5"
    android:padding="@dimen/screen_padding_5"
    android:background="@drawable/rec_light_red_background_5"
    android:orientation="horizontal"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView117"
        android:layout_width="0dp"
        android:textColor="@color/white"
        style="@style/roboto_medium_14_davys_grey"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Amount" />

    <TextView
        android:id="@+id/textView131"
        android:layout_width="0dp"
        android:textColor="@color/white"
        style="@style/roboto_medium_14_davys_grey"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Type" />

    <TextView
        android:id="@+id/textView136"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        style="@style/roboto_medium_14_davys_grey"
        android:text="Note" />

    <TextView
        android:id="@+id/textView139"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        style="@style/roboto_medium_14_davys_grey"
        android:text="Created" />

</LinearLayout>