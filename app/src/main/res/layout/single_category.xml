<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:id="@+id/cateConstLayout"
    android:padding="@dimen/dimen_1"
    android:layout_height="wrap_content"
    >



    <ImageView
        android:id="@+id/imgCat"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/product_category_image_height"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/found_nothing" />

    <View
        android:id="@+id/view37"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="@+id/imgCat"
        app:layout_constraintEnd_toEndOf="@+id/imgCat"
        app:layout_constraintStart_toStartOf="@+id/imgCat"
        app:layout_constraintTop_toTopOf="@+id/imgCat" />

    <TextView
        android:id="@+id/tvCatName"
        style="@style/roboto_medium_18_davys_grey."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5"
        android:text="Shop man"
        android:minLines="2"
        android:maxLines="2"
        android:textAlignment="center"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>