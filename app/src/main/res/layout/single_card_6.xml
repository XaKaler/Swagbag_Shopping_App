<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/card_6_width"
    android:layout_margin="@dimen/dimen_5"
    android:layout_height="@dimen/card_6_height">


    <ImageView
        android:id="@+id/dealCardImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/navigation_header_user_img" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/day_white_night_black"
        android:alpha="0.8"
        android:paddingVertical="@dimen/dimen_5"
        app:layout_constraintBottom_toBottomOf="@+id/dealCardImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/dealCardTitle"
            style="@style/alice_normal_15_dark_green"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/day_mid_night_green_night_Pewter_Blue"
            android:layout_marginHorizontal="10dp"
            android:text="TextView"
            android:maxLines="1"
            android:minLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dealCardDetails"
            android:fontFamily="@font/roboto_regular"
            style="@style/arya_normal_12_black"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:minLines="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="TextView"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/dealCardTitle"
            app:layout_constraintStart_toStartOf="@+id/dealCardTitle"
            app:layout_constraintTop_toBottomOf="@+id/dealCardTitle" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view15"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dealCardImg" />

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@+id/dealCardImg"
        app:layout_constraintTop_toBottomOf="@+id/dealCardImg" />

</androidx.constraintlayout.widget.ConstraintLayout>