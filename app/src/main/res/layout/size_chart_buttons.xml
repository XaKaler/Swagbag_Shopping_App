<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginVertical="@dimen/dimen_5"
    android:background="@drawable/rec_outline_5"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sizeChart"
        style="@style/roboto_medium_14_red_light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/red_rec_outline_5"
        android:paddingVertical="@dimen/dimen_15"
        android:text="@string/size_chart"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/howToMeasure"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/howToMeasure"
        style="@style/roboto_normal_14_sonic_silver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dimen_15"
        android:text="How to Measure"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/sizeChart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sizeChart"
        app:layout_constraintTop_toTopOf="@+id/sizeChart" />


</androidx.constraintlayout.widget.ConstraintLayout>